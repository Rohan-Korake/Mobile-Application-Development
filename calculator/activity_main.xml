<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/OutputScreen"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:text=""
        android:padding="10dp"
        android:textSize="25sp"
        android:gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <GridLayout
        android:id="@+id/gridKeys"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="10dp">

        <Button
            android:id="@+id/ac"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="AC"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="allClear"/>

        <Button
            android:id="@+id/del"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="DEL"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:onClick="delete"/>

        <Button
            android:id="@+id/mod"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="%"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="operator"/>

        <Button
            android:id="@+id/div"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="/"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="operator"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/mul"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="x"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="operator"/>

        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/sub"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:onClick="operator"/>

        <Button
            android:id="@+id/one"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/two"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/three"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/add"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="operator"/>

        <Button
            android:id="@+id/doubleZero"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="00"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/dot"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="."
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="number" />

        <Button
            android:id="@+id/equal"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:onClick="calculate" />
    </GridLayout>
</LinearLayout>